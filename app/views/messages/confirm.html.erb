<h3>Confirm the following content!</h3>
<%= form_with(model: @message, url: messages_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>Tweet: <%= @message.content %></p>
  <%= form.submit  "submit" %>
<% end %>

<%= form_with(model: @message, url: new_message_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "back", name: 'back' %>
<% end %>