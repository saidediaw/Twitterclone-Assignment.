<h1>List of tweets</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Content</th>
  </tr>
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.content %></td>
      <td><%= link_to 'Edit this tweet', edit_message_path(message.id) %></td>
      <td><%= link_to 'Delete this tweet', message_path(message.id), method: :delete ,data: { confirm: 'Are you sure to delete this?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'New tweet', new_message_path %>
